{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/*.ts", "src/server.ts"],
  "exclude": ["node_modules", "dist", "front"]
}
